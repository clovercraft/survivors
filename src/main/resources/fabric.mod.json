{
  "schemaVersion": 1,
  "id": "ccsurvivors",
  "version": "${version}",

  "name": "Clovercraft Survivors",
  "description": "A mod for running the Clovercraft Survivors game mode",
  "authors": [
    "Martin Sheeks"
  ],
  "contact": {
    "homepage": "https://clovercraft.gg/",
    "sources": "https://github.com/clovercraft/survivors"
  },

  "license": "CC0-1.0",
  "icon": "assets/ccsurvivors/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "gg.clovercraft.survivors.SurvivorsMod"
    ],
    "server": [
      "gg.clovercraft.survivors.SurvivorServerMod"
    ]
  },
  "mixins": [
    "ccsurvivors.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.13.3",
    "fabric": "*",
    "minecraft": "1.18.x",
    "java": ">=17"
  }
}
